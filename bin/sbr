#!/usr/bin/env ruby
# -*- encoding: utf-8 -*-
#


require 'sbr'

require 'yaml'
require 'optparse'


def main
  parser = OptionParser.new
  parser.banner = <<-EndBanner
Usage: #{parser.program_name} <subcommand> [options] [args]

Subcommands:
    post        Post photo(s).

Global Options:
  EndBanner
  parser.on_tail('-v', '--version', 'Show version.') {
    puts "v#{Sbr::VERSION}"
    exit 0
  }
  parser.on_tail('-h', '--help', 'Show this message.') {
    puts parser.help
    exit 0
  }

  subcommands = {}
  subcommands['post'] = PostPhotoCommand.new
  begin
    parser.order!
    if ARGV.empty?
      $stderr.puts 'no sub-command given'
      $stderr.puts parser.help
      exit 1
    end
    name = ARGV.shift
    cmd = subcommands[name] or error "no such sub-command: #{name}"
  rescue OptionParser::ParseError => err
    $stderr.puts err.message
    $stderr.puts parser.help
    exit 1
  end
  begin
    cmd.parse(ARGV)
  rescue OptionParser::ParseError => err
    $stderr.puts err.message
    $stderr.puts cmd.help
    exit 1
  end
  cmd.exec(ARGV)
end

def error(msg)
  $stderr.puts "#{File.basename($0, '.*')}: error: #{msg}"
  exit 1
end


main
